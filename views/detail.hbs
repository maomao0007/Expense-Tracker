<div class="container mx-auto">
<form action="/Expense-Tracker" method="POST">

<div class="d-flex justify-content-center m-4">
    <div class="col-2">
      * required
    </div>
    <div class="col-4">
      Please enter your expenses.
    </div>
</div>

<div class="d-flex justify-content-center m-4">
    <div class="col-2">
      <label for="name" class="col-5">Name * :</label>
    </div>
    <div class="col-4">
      <input id="name" class="col-7" type="text" placeholder="Please enter the name of the item." name="name" style="width: 250px;" required/>
    </div>
</div>
<div class="d-flex justify-content-center m-4">
    <div class="col-2">
     <label for="date">Date * :</label>
    </div>
    <div class="col-4">
      {{expense.date}}
    </div>
</div>
<div class="d-flex justify-content-center m-4">
    <div class="col-2">
     <label for="category">Category * :</label>
    </div>
    <div class="col-4">
     {{expense.category}}
    </div>
</div>

<div class="d-flex justify-content-center m-4">
    <div class="col-2">
   <label for="amount">Amount * :</label>
    </div>
    <div class="col-4">
       {{expense.amount}}
    </div>
</div>

<div class="d-flex justify-content-center my-4">
<a href="/Expense-Tracker" class="btn btn-info">Back to Family Budget Book</a>
</div>

 <a href="/Expense-Tracker/{{expense.id}}/edit" class="btn btn-outline-primary me-2">Edit</a>
<form action="/Expense-Tracker/{{expense.id}}?_method=DELETE" method="POST"
style="display: inline;">
<button type="submit" class="btn btn-outline-danger" onclick="return confirmDelete();">Delete</button>


<div class="d-flex justify-content-center my-4">
  <button type="submit" class="btn btn-primary" style="width: 200px;">Submit</button>
</div>

</form>
</div>